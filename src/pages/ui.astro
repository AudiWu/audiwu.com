---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Hover } from "@/components/Demo/Hover";
import { Dropdown } from "@/components/Demo/Dropdown";
import { SwitchDemo } from "@/components/Demo/Switch";
import { TabsDemo } from "@/components/Demo/Tab";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div
    class="w-screen h-screen flex flex-col gap-2 justify-center items-center"
  >
    <Button>Button1</Button>
    <Button variant="secondary">Secondary</Button>
    <Button variant="destructive">Desctructive</Button>
    <label form="name">Audi</label>
    <Input id="label" className="w-30" type="text" aria-label="Input" />
    <Hover client:load />
    <Dropdown client:load />
    <SwitchDemo client:load />
    <TabsDemo client:load />
  </div>
</Layout>
