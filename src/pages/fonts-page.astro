---
import Page from "@/layouts/page.astro";

const exampleSentence = "The quick brown fox jumps over the lazy dog.";
---

<Page>
  <div class="flex flex-col gap-3 p-4">
    <h1 class="font-black">Black 900</h1>
    <p class="font-black text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Extrabold 800</h1>
    <p class="font-extrabold text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Bold 700</h1>
    <p class="font-bold text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Semibold 600</h1>
    <p class="font-semibold text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Medium 500</h1>
    <p class="font-medium text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Normal 400</h1>
    <p class="font-normal text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Light 300</h1>
    <p class="font-light text-5xl">{exampleSentence}</p>
    <hr />
    <h1 class="font-black">Extralight 200</h1>
    <p class="font-extralight text-5xl">{exampleSentence}</p>
    <!-- <hr />
    <h1 class="font-black">Thin 100</h1>
    <p class="font-thin text-5xl">{exampleSentence}</p> -->
  </div>
</Page>
