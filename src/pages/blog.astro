---
import { getCollection } from "astro:content";
import Page from "@/layouts/page.astro";

const blogs = await getCollection("blogs");
---

<Page>
  <div class="w-full">
    <ul class="w-full px-8 flex flex-col justify-items-center items-center">
      {
        blogs?.map((blog) => (
          <li class="w-full md:w-2/3 pb-8 md:pb-4  last:pb-0">
            <div class="flex flex-col md:flex-row text-lg text-primary font-bold justify-between">
              <a class="hover:underline" href={`/blog/${blog.id}`}>{blog.data.title}</a>
              <p>{blog.data.date}</p>
            </div>
            <p class="text-normal text-secondary font-normal">
              {blog.data.description}
            </p>
          </li>
        ))
      }
    </ul>
  </div>
</Page>
